<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>Compuder Scraper</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p>{{this.description}}</p>
                    <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this.id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Oops! We don't have any cool new compuder articles yet!</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>